<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    android:orientation="horizontal"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="20dp">

    <LinearLayout
        android:id="@+id/list_vet"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_nam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Product Name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/product_imag"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_below="@+id/product_nam"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_pri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_imag"
            android:gravity="center_horizontal"
            android:text="Product Price"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/product_desc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/product_pri"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="Product Description"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/taille"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_desc"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="Product Size"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/fav_vet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/favoris"
            android:tint="@color/colorAccent" />

    </LinearLayout>

</androidx.cardview.widget.CardView>